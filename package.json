{
    "name": "email-service",
    "version": "1.0.0",
    "description": "A resilient email sending service in JavaScript",
    "main": "dist/EmailService.js",
    "scripts": {
      "build": "tsc",
      "test": "jest",
      "start": "node dist/EmailService.js"
    },
    "dependencies": {
      "@types/jest": "^29.5.12",
      "jest": "^29.7.0",
      "ts-jest": "^29.2.5"
    },
    "devDependencies": {
      "@babel/core": "^7.25.2",
      "@babel/preset-env": "^7.25.4",
      "@babel/preset-react": "^7.24.7",
      "babel-jest": "^29.7.0",
      "typescript": "^5.0.0"
    },
    "jest": {
    "testPathIgnorePatterns": ["/dist/"],
      "testEnvironment": "node",
      "transform": {
        "^.+\\.ts$": "ts-jest",
        "^.+\\.js$": "babel-jest"
      },
      "moduleFileExtensions": [
        "js",
        "json",
        "ts"
      ],
      "testMatch": [
        "**/?(*.)+(spec|test).ts",
        "**/?(*.)+(spec|test).js"
      ]
    }
  }
  